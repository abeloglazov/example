<?xml version="1.0" encoding="UTF-8"?>
<persistence version="2.0" 	xmlns="http://java.sun.com/xml/ns/persistence" 
							xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" 
							xsi:schemaLocation="http://java.sun.com/xml/ns/persistence http://java.sun.com/xml/ns/persistence/persistence_2_0.xsd">
	<persistence-unit name="MySimpleBlog" transaction-type="JTA">
		<jta-data-source>jdbc/orcl</jta-data-source>
		<class>training.mysimpleblog.entity.Comment</class>
		<class>training.mysimpleblog.entity.Post</class>
		<class>training.mysimpleblog.entity.Role</class>
		<class>training.mysimpleblog.entity.User</class>
		<class>training.mysimpleblog.entity.Setting</class>
		<class>training.mysimpleblog.entity.Tag</class>
	</persistence-unit>
</persistence>
